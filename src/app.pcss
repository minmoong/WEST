@tailwind base;
@tailwind components;
@tailwind utilities;

::-webkit-scrollbar {
	width: 5px;
}

::-webkit-scrollbar-track {
	background-color: #e1e1e1;
	border-radius: 10px;
}

::-webkit-scrollbar-thumb {
	background-color: #aaa;
	border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
	background-color: #999;
}

html,
body {
	font-family: 'Noto Sans KR', sans-serif;
	height: 100%;
}
